<div class="container mt-5 d-flex justify-content-center">
  <div class="card w-75 p-5 bg-light">
    <h1 class="mb-4"><%= @article[:title] %></h1>
    <p class="mb-4"><%= @article[:content] %></p>
    <div>
      <%= link_to "Back", articles_path %> | <%= link_to "Edit", edit_article_path(@article) %> | <%= link_to "Delete", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  </div>
</div>
